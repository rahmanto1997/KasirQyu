<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayoutID"
    tools:context=".HomeScreen">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:scrollbarThumbVertical="@color/black"
        app:headerLayout="@layout/activity_menu_header"
        app:menu="@menu/main_menu"/>

    <FrameLayout
        android:id="@+id/hand"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/topDrawerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_menu_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="60dp"
                android:text="Beranda"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="380dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="200dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/history"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginBottom="200dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="71dp"
                android:text="Riwayat"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/kel_produk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="360dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="200dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/kel_prod"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginBottom="200dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="248dp"
                android:text="Produk"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="190dp"
                android:padding="130dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/setting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginTop="340dp"
                android:padding="150dp"
                android:layout_centerHorizontal="true"
                android:text="Setting"
                android:textSize="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="600dp"
                android:padding="20dp"
                android:text="Transaksi"
                android:backgroundTint="@color/blue_1"/>

        </RelativeLayout>
    </FrameLayout>
    </androidx.drawerlayout.widget.DrawerLayout>